<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintBottom_toTopOf="@id/til_dialog_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_dialog_pos"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toTopOf="@id/til_dialog_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_dialog_pos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/anime_pos_hint"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_dialog_title"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/til_dialog_genre"
        app:layout_constraintLeft_toLeftOf="@id/til_dialog_pos"
        app:layout_constraintRight_toRightOf="@id/til_dialog_pos"
        app:layout_constraintTop_toBottomOf="@id/til_dialog_pos">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/anime_title_hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_dialog_genre"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/til_dialog_poster"
        app:layout_constraintLeft_toLeftOf="@id/til_dialog_title"
        app:layout_constraintRight_toRightOf="@id/til_dialog_title"
        app:layout_constraintTop_toBottomOf="@id/til_dialog_title">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_dialog_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/anime_genre_hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_dialog_poster"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/til_dialog_desc"
        app:layout_constraintLeft_toLeftOf="@id/til_dialog_title"
        app:layout_constraintRight_toRightOf="@id/til_dialog_title"
        app:layout_constraintTop_toBottomOf="@id/til_dialog_genre">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_poster_poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/anime_poster_hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_dialog_desc"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/btn_dialog_ok"
        app:layout_constraintLeft_toLeftOf="@id/til_dialog_title"
        app:layout_constraintRight_toRightOf="@id/til_dialog_title"
        app:layout_constraintTop_toBottomOf="@id/til_dialog_poster">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_dialog_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/anime_desc_hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_dialog_ok"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@android:string/ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/til_dialog_title"
        app:layout_constraintTop_toBottomOf="@id/til_dialog_desc" />

    <Button
        android:id="@+id/btn_dialog_cancel"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@android:string/cancel"
        app:layout_constraintBottom_toBottomOf="@id/btn_dialog_ok"
        app:layout_constraintRight_toLeftOf="@id/btn_dialog_ok"
        app:layout_constraintTop_toTopOf="@+id/btn_dialog_ok"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>