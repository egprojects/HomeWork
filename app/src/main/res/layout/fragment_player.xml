<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp">

    <ImageView
        android:id="@+id/iv_player_poster"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/iv_content_poster"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/sb_player_seeker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/iv_player_poster" />

    <TextView
        android:id="@+id/tv_player_current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        app:layout_constraintLeft_toLeftOf="@id/sb_player_seeker"
        app:layout_constraintTop_toBottomOf="@id/sb_player_seeker" />

    <TextView
        android:id="@+id/tv_player_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        app:layout_constraintBottom_toBottomOf="@id/tv_player_current_time"
        app:layout_constraintRight_toRightOf="@id/sb_player_seeker"
        app:layout_constraintTop_toTopOf="@id/tv_player_current_time" />

    <TextView
        android:id="@+id/tv_player_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@id/tv_player_performer"
        app:layout_constraintLeft_toLeftOf="@id/tv_player_current_time"
        app:layout_constraintRight_toRightOf="@id/tv_player_duration"
        app:layout_constraintTop_toBottomOf="@id/tv_player_current_time"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_player_performer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@id/ib_player_play_pause"
        app:layout_constraintLeft_toLeftOf="@id/tv_player_title"
        app:layout_constraintRight_toRightOf="@id/tv_player_title"
        app:layout_constraintTop_toBottomOf="@id/tv_player_title" />

    <ImageButton
        android:id="@+id/ib_player_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/ib_content_close"
        app:layout_constraintBottom_toBottomOf="@id/ib_player_play_pause"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ib_player_prev"
        app:layout_constraintTop_toTopOf="@id/ib_player_play_pause"
        app:srcCompat="@drawable/ic_player_close" />


    <ImageButton
        android:id="@+id/ib_player_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/ib_content_prev"
        app:layout_constraintBottom_toBottomOf="@id/ib_player_play_pause"
        app:layout_constraintLeft_toRightOf="@id/ib_player_close"
        app:layout_constraintRight_toLeftOf="@id/ib_player_play_pause"
        app:layout_constraintTop_toTopOf="@id/ib_player_play_pause"
        app:srcCompat="@drawable/ic_player_prev" />

    <ImageButton
        android:id="@+id/ib_player_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/ib_content_play_pause"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ib_player_prev"
        app:layout_constraintRight_toLeftOf="@id/ib_player_next"
        app:srcCompat="@drawable/ic_player_play" />

    <ImageButton
        android:id="@+id/ib_player_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/ib_content_next"
        app:layout_constraintBottom_toBottomOf="@id/ib_player_play_pause"
        app:layout_constraintLeft_toRightOf="@id/ib_player_play_pause"
        app:layout_constraintRight_toLeftOf="@id/ib_player_stop"
        app:layout_constraintTop_toTopOf="@id/ib_player_play_pause"
        app:srcCompat="@drawable/ic_player_next" />

    <ImageButton
        android:id="@+id/ib_player_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/ib_content_stop"
        app:layout_constraintBottom_toBottomOf="@id/ib_player_play_pause"
        app:layout_constraintLeft_toRightOf="@id/ib_player_next"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ib_player_play_pause"
        app:srcCompat="@drawable/ic_player_stop" />

</androidx.constraintlayout.widget.ConstraintLayout>