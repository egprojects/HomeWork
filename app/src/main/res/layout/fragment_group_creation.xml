<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_page5_field1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toTopOf="@id/til_page5_field2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_page5_field1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/page5_field1_hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_page5_field2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/til_page5_field3"
        app:layout_constraintLeft_toLeftOf="@id/til_page5_field1"
        app:layout_constraintRight_toRightOf="@id/til_page5_field1"
        app:layout_constraintTop_toBottomOf="@id/til_page5_field1">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_page5_field2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/page5_field2_hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_page5_field3"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/btn_page5"
        app:layout_constraintLeft_toLeftOf="@id/til_page5_field1"
        app:layout_constraintRight_toRightOf="@id/til_page5_field1"
        app:layout_constraintTop_toBottomOf="@id/til_page5_field2">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_page5_field3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/page5_field3_hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_page5"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/button_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/til_page5_field1"
        app:layout_constraintRight_toRightOf="@id/til_page5_field1"
        app:layout_constraintTop_toBottomOf="@id/til_page5_field3" />

</androidx.constraintlayout.widget.ConstraintLayout>